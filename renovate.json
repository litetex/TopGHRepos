{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "rebaseWhen": "behind-base-branch",
  "packageRules": [
    {
      "description": "Stick with .NET LTS",
      "datasources": [
        "dotnet-version"
      ],
      "ignorePaths": [
        "(^|/)global\.json$"
      ],
      "allowedVersions": "<9"
    },
    {
      "description": "Stick with .NET LTS",
      "matchPackagePatterns": [
        "^Microsoft.SourceLink.GitHub",
        "^Microsoft.EntityFrameworkCore", 
        "^dotnet" 
      ],
      "datasources": [
        "nuget"
      ],
      "allowedVersions": "<9"
    }
  ]
}
